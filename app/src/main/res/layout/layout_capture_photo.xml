<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_capture"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:drawableStart="@drawable/ic_capture_photo_24"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:text="@string/click_for_img"
        android:textSize="@dimen/_14ssp"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        tools:ignore="UseCompatTextViewDrawableXml"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_folder"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/take_from_folder"
        android:textSize="@dimen/_14ssp"
        android:clickable="true"
        android:focusable="true"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_take_from_gallery_24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_capture"
        tools:ignore="UseCompatTextViewDrawableXml" />

</androidx.constraintlayout.widget.ConstraintLayout>